		
		 <div id="map-canvas"> 
			
		 </div>
		 
		 <div id="control"> </div>
		 
		 <div id="directions-panel"> </div>

		<div id="trip-stats">
			<h3 id="trip-name"><%= @trip.name.capitalize%></h3>
			<ul id="trip-link">
				<li class="trip-list"><strong>Gas Cost:</strong> <%= number_to_currency(@trip.gas_price) %></li>
				<li class="trip-list" ><strong>Distance: </strong><%= @trip.distance %></li>
				<li class="trip-list"><strong>Duration:</strong> <%= @trip.duration %></li>
			</ul>
		</div>

		<div id="cheapest-station">
				<h3 id="station-name"> Cheapest Station around <%= @trip.start.address.capitalize %></h3>
				<ul id="station-link">
				<% @trip.return_cheapest_or_closest_gas_stations.each do |station| %>
					<li> Name: <%= station.name %> <li>
						<li>Address:<%= station.address %> </li>
						<li>Price: <%= number_to_currency(station.price) %> </li>
						<li> Distance: <%= station.distance %> </li>
				<% end %>
				</ul>
		</div>
		
	
